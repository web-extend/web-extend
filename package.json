{
  "name": "rsbuild-plugin-web-ext",
  "version": "0.0.1-alpha.2",
  "description": "A plugin for developing and building browser extensions within Rsbuild.",
  "keywords": ["web extensions", "browser extensions", "rsbuild plugin"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xbzhang1024/rsbuild-plugin-web-ext.git"
  },
  "homepage": "https://github.com/xbzhang1024/rsbuild-plugin-web-ext.git",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build": "rslib build",
    "dev": "rslib build --watch",
    "lint": "biome check .",
    "lint:write": "biome check . --write",
    "prepare": "simple-git-hooks && npm run build",
    "test": "playwright test",
    "bump": "npx bumpp"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint:write"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@playwright/test": "^1.48.2",
    "@rsbuild/core": "^1.1.6",
    "@rslib/core": "^0.1.0",
    "@types/chrome": "^0.0.284",
    "@types/node": "^22.8.6",
    "playwright": "^1.48.2",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "@rsbuild/core": "1.x"
  },
  "peerDependenciesMeta": {
    "@rsbuild/core": {
      "optional": true
    }
  },
  "packageManager": "pnpm@9.12.3",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
