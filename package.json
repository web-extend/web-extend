{
  "name": "web-extend-monorepo",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "private": "true",
  "scripts": {
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "lint": "biome check .",
    "lint:write": "biome check . --write",
    "dev:docs": "cd docs && pnpm dev",
    "build:docs": "cd docs && pnpm build",
    "preview:docs": "cd docs && pnpm preview",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{md,mdx,json,css,less,scss}": "prettier --write",
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "biome check --write --no-errors-on-unmatched",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/web-extend/web-extend.git"
  },
  "author": "",
