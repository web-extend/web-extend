  "bugs": {
    "url": "https://github.com/web-extend/web-extend/issues"
  },
  "homepage": "https://github.com/web-extend/web-extend#readme",
  "description": "",
  "packageManager": "pnpm@10.0.0",
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
